package Aluno;

import java.util.Scanner;

public class Media {

	public static void main(String[] args) {
		double media1, media2,faltas,aulas,nota;
		
		aulas = 20;
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Informe a primeira nota");
		media1 = scan.nextDouble();
		System.out.println("Informe a segunda nota");
		media2 = scan.nextDouble();
		nota = (media1 + media2)/2;
		System.out.println("Informe o Numero de faltas");
		faltas = scan.nextDouble();
		
		if (nota >= 6) {
			System.out.println("Aluno Aprovado" + "Faltas " + faltas + "Media " + nota);
		}if (nota < 6) {
			System.out.println("Aluno Reprovado" + faltas + "Media " + nota);
		}



	}

}
