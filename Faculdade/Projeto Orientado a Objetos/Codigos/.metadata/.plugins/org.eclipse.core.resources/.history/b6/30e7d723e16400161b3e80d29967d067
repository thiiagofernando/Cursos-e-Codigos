package CALC;

import java.util.Scanner;

public class CalculadorCase {

	public static void main(String[] args) {
		
		double  PrimeiroValor, SegundoValor,somar,multiplica,
		dividir,subtrair;
		int op;
		
		//recebe os valores
		Scanner scan = new Scanner(System.in);
		System.out.println("Informe o Primeiro Valor");
		PrimeiroValor = scan.nextFloat();
		System.out.println("Informe o Segundo Valor");
		SegundoValor = scan.nextFloat();
		
		System.out.println("Informe a Operação");
		op = scan.nextInt();
		
		switch (op) {
		case 1:
			System.out.println("A soma dos Valores é :" + (PrimeiroValor + SegundoValor));
			break;
		
		case 2:
			System.out.println("A subtração dos Valores é :" + (PrimeiroValor - SegundoValor));
			break;
			
		case 3:
			System.out.println("A multiplicação dos Valores é :" + (PrimeiroValor * SegundoValor));
			break;
			
		case 4:
			System.out.println("A divisão dos Valores é :" + (PrimeiroValor / SegundoValor));
			break;

		default:
			System.out.println("Operação Invalida");
			break;
		}

	}

}
