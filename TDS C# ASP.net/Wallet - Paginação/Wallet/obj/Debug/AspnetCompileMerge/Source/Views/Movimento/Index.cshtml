    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NrPeriodo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DtLancamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
