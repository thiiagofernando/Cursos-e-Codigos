@model IEnumerable<Wallet.Models.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Cadastrar Categoria</h3>
<form action="~/Categoria/Create" method="post">
    <div class="row">
        <div class="col-sm-4">
            Descrição:
            <input type="text" name="descricao" class="form-control"/>
            Tipo:
            <select name="Tipo" class="form-control">
                <option value="Entrada">Entrada</option>
                <option value="Saida">Saida</option>
            </select>
            <br /><br />
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </div>
    </div>
</form>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
        <td>
            <a href="~/Categoria/Delete/@item.IDCategoria">
                <span class="glyphicon glyphicon-trash" title="Excluir Categoria"></span>
            </a>
        </td>
    </tr>
}

</table>
