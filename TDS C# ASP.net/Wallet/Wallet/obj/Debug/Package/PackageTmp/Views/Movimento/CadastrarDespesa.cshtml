@model IEnumerable<Wallet.Models.Movimento>

@{
    ViewBag.Title = "Cadastrar Despesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    <span class="glyphicon glyphicon-signal">Cadastrar Despesa</span>
</h2>

@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4>Movimento</h4>
        <hr />
        Categoria:
        <select class="form-control" name="IDCategoria">
            @foreach (var item in ViewBag.Categorias)
            {
                <option value="@item.IDCategoria">@item.Descricao</option>
            }
        </select>
        Periodo:
        <input type="number" name="NrPeriodo" class="form-control"/>
        Valor:
        <input type="text" name="Valor" class="form-control" />
        <br />
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>    
</div>
<table class="table table-striped">
    <tr>
        <td>Codigo</td>
        <td>Descrição</td>
        <td>Tipo</td>
        <td>Periodo</td>
        <td>Data de Lançamento</td>
        <td>Valor</td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IDMovimento</td>
            <td>@item.Categoria.Descricao</td>
            <td>@item.Categoria.Tipo</td>
            <td>@item.NrPeriodo</td>
            <td>@item.DtLancamento</td>
            <td class="text-danger">@item.Valor</td>
            <td>
                <a href="~/Movimento/ExcluirDespesa/@item.IDMovimento" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>


    }
</table>
